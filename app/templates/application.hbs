<nav>
  <div class="ui menu">
    <div class="left menu" id="add-data">
      <div class="cubes item">
        {{#link-to 'application' class='cities-link'}}
          <i class="grid layout icon"></i>
        {{/link-to}}
      </div>
      {{#ui-dropdown class="dropdown item" selected=currentCity.city.name}}
        <div class="default text">Select Your City</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          {{#each model as |city|}}
            {{#link-to 'cities.city.city-filters' city.id class="item" tagName='a'}}
              {{city.name}}
            {{/link-to}}
          {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
    
    {{!--     This is asking for surprise breaking later - maybe this is ember wormhole or a sophisticated component? --}}

    <div class="right menu">
      <div class="item">
        {{#if session.isAuthenticated}}
          <a {{action 'invalidateSession'}}>Logout</a>
        {{else}}
          {{link-to 'Login' 'login' class='login-link'}}
        {{/if}}
      </div>
    </div>
  </div>
</nav>
<main class="ui bottom attached segment">
  {{outlet}}
</main>

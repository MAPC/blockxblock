<div class="cities">
  <div class="cities-detail">
    View As: Developer
    {{#leaflet-map lat=latitude lng=longitude zoom=zoom}}
      {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
      {{#each model as |city|}}
        {{#each city.features as |feature|}}
          {{#if feature.latitude}}
            {{#marker-layer lat=feature.latitude lng=feature.longitude opacity=0.5}}
              {{#popup-layer}}
                <h3>{{feature.name}}</h3>
                Type: {{feature.assetType}}
              {{/popup-layer}}
            {{/marker-layer}}
          {{/if}}
        {{/each}}
        {{#marker-layer lat=city.latitude lng=city.longitude onClick=(action 'transitionToRoute' city)}}
        {{/marker-layer}}
      {{/each}}
    {{/leaflet-map}}
  </div>
  {{outlet}}
</div>
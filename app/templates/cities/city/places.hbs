<div class="ui vertical segment">
  <h3>Feature Name</h3>

  <div class="content">
    {{model.feature_name}}</div>
</div>

  {{place-accord streetAddress       = model.address
                 nonAddressyLocation = model.non_addressy_location
                 amountPlaceHolder   = 'amountPlaceHolder'
                 featureStart        = model.tdi_asset_start
                 featureType         = model.type
                 featureSubType      = model.subtype
                 status              = model.status
                 open_on             = model.open_on
                 close_on             = model.close_on
                 amountInvestments    = totalInvestments
                 is_employer          = model.is_employer
                 model                 = model}}

  <h3>Related</h3>

  {{tabbed-results  visibleInvestments  = model.investments
                    showInvestments     = true
                    visibleFeatures     = model.relatedFeatures
                    showFeatures        = true          }}


  {{resource-nav-menu
    session=session
    routeSegment='edit-feature'
    model=model}}
</div>
